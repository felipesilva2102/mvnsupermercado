<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="3.0"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <persistence-unit name="mvnsupermercado" transaction-type="RESOURCE_LOCAL">
        <class>com.supermercado.model.Produto</class>
        <class>com.supermercado.model.CategoriaProduto</class>
        <class>com.supermercado.model.Fornecedor</class>
        <class>com.supermercado.model.Cliente</class>
        <class>com.supermercado.model.Funcionario</class>
        <class>com.supermercado.model.Venda</class>
        <class>com.supermercado.model.ItemVenda</class>

        <properties>
            <!-- JDBC Settings -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/supermercado"/>
            <property name="jakarta.persistence.jdbc.user" value="esp_user"/>
            <property name="jakarta.persistence.jdbc.password" value="123456"/>

            <!-- Hibernate Settings -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
